@{
    ViewData["Title"] = "Collection";
}

<!-- Grab the list with the movies we sent in the action -->
@model List<MovieEntry>

<div class="text-center">
    <!-- Add a header -->
    <h1 class="display-4">Joel Hilton's Film Collection</h1>

    <!-- Create a bordered table -->
    <table class="table table-bordered table-striped">
        <!-- Create a header with bolded titles for the columns -->
        <thead class="fw-bold">
            <tr>
                <td>Category</td>
                <td>Title</td>
                <td>Year</td>
                <td>Director</td>
                <td>Rating</td>
                <td>Edited</td>
                <td style="white-space: nowrap">Lent To</td>
                <td style="white-space: nowrap">Copied to Plex</td>
                <td>Notes</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            <!-- Dynamically display all of the rows based on the passed in list of movies from the model-->
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Category.CategoryName</td>
                    <td>@m.Title</td>
                    <td>@m.Year</td>
                    <td>@m.Director</td>
                    <td>@m.Rating</td>
                    <td>@m.Edited</td>
                    <td>@m.LentTo</td>
                    <td>@m.CopiedToPlex</td>
                    <td>@m.Notes</td>

                    <!-- Add two details. One for the Edit and One for Delete -->
                    <!-- Both with pass the m.MovieId in the route if clicked -->
                    <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@m.MovieId">Edit</a></td>
                    <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@m.MovieId">Delete</a></td>
                </tr>
            }
        </tbody>

    </table>
    <br />
    <!-- Add a scroll to top button cuz I was annoyed scrolling back -->
    <!-- I gave the header in the _Layout View the id of top so it scrolls there -->
    <a href="#top">Scroll to Top</a>
</div>
